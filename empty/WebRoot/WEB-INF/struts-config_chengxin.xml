<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="targetForm" type="com.san.mxchengxin.form.TargetForm" />
    <form-bean name="addForm" type="com.san.mxchengxin.form.AddForm" />
    <form-bean name="levelForm" type="com.san.mxchengxin.form.LevelForm" />
    <form-bean name="levelAddForm" type="com.san.mxchengxin.form.LevelAddForm" />
    <form-bean name="countryForm" type="com.san.mxchengxin.form.country.CountryForm" />
    <form-bean name="ctyAddForm" type="com.san.mxchengxin.form.country.CtyAddForm" />
    <form-bean name="partAddForm" type="com.san.mxchengxin.form.part.PartAddForm" />
    <form-bean name="recordForm" type="com.san.mxchengxin.form.record.RecordForm" />
  </form-beans>

  <global-exceptions />
  <global-forwards >
    <forward name="targetForword" path="/page/san/target.jsp" />
	<forward name="addForword" path="/page/san/add.jsp" />
	<forward name="levelForword" path="/page/san/level.jsp" />
    <forward name="countryForword" path="/page/san/country/country.jsp" />
	<forward name="levelAddForword" path="/page/san/levelAdd.jsp" />
  </global-forwards>
  <!-- path:  action 的路径 -->
  <action-mappings >
  		
		
    <action
      attribute="targetForm"
      input="/page/san/target.jsp"
      name="targetForm"
      path="/home/target"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="targetForword" path="/page/san/target.jsp" />
    </action>
    <action
      attribute="addForm"
      input="/page/san/add.jsp"
      name="addForm"
      path="/home/target/add"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="addForword" path="/page/san/add.jsp" />
    </action>	
   
	<action
      attribute="countryForm"
      input="/page/san/country/country.jsp"
      name="countryForm"
      path="/home/country"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">
      <forward name="countryForword" path="/page/san/country/country.jsp" />
    </action>
    
	<action
      attribute="ctyaddForm"
      input="/page/san/country/add.jsp"
      name="ctyAddForm"
      path="/home/country/add"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">
      <forward name="ctyaddForword" path="/page/san/country/add.jsp" />
    </action>	  

     <action
      attribute="levelForm"
      input="/page/san/level.jsp"
      name="levelForm"
      path="/home/level"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="targetForword" path="/page/san/level.jsp" />
    </action>
    
    <action
      attribute="levelAddForm"
      input="/page/san/levelAdd.jsp"
      name="levelAddForm"
      path="/home/level/add"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="levelAddForword" path="/page/san/levelAdd.jsp" />
    </action>	
   
   <action
      path="/home/report"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="reportForword" path="/page/san/report.jsp" />
    </action>	
   
   <action
      path="/home/part"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="partForword" path="/page/san/part/part.jsp" />
    </action>	
   
   <action
      attribute="partAddForm"
      input="/page/san/part/add.jsp"
      name="partAddForm"
      path="/home/part/add"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="partAddForword" path="/page/san/part/add.jsp" />
    </action>	
    
    <action
      attribute="recordForm"
      input="/page/san/record/record.jsp"
      name="recordForm"
      path="/home/record"
      scope="request"
      type="org.springframework.web.struts.DelegatingActionProxy">

      <forward name="recordForword" path="/page/san/record/record.jsp" />
    </action>	
    
  </action-mappings>

</struts-config>

